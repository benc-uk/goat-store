@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">A Bad Thing Occurred 😢</h1>

@if (Model.ErrorMessage.Length > 0)
{
    <p>
        <h3>Message: </h3> <pre style="color: red; font-size: 120%; width: 100%; white-space: pre-wrap; ">@Model.ErrorMessage</pre>
    </p>
    <p>
        <h3>Source: </h3> <pre style="color: red; font-size: 120%">@Model.ErrorSource</pre>
    </p>
}

